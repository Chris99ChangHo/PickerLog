{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "moduleResolution": "bundler",

    "lib": ["ES2020", "DOM"],

    "jsx": "react-jsx",
    "baseUrl": ".",
    "resolveJsonModule": true,

    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "types": ["react", "react-native", "jest"]
  },
  "include": ["app", "src"],
  "exclude": ["node_modules"]
}
